{
	"name": "@sylphx/zen",
	"version": "0.1.0",
	"description": "ðŸ§˜ Lightweight schema validation (~2KB gzipped)",
	"type": "module",
	"main": "./dist/index.js",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js"
		}
	},
	"files": ["dist", "README.md"],
	"scripts": {
		"build": "bun build ./src/index.ts --outdir ./dist --target node --minify && bun run build:types",
		"build:types": "tsc --emitDeclarationOnly --outDir dist",
		"test": "bun test",
		"typecheck": "tsc --noEmit"
	},
	"keywords": ["zen", "schema", "validation", "typescript", "lightweight", "mini", "tree-shakable"],
	"author": "Sylphx",
	"license": "MIT",
	"peerDependencies": {
		"typescript": ">=5.0.0"
	}
}
