{
	"$schema": "https://biomejs.dev/schemas/2.3.8/schema.json",
	"extends": ["@sylphx/biome-config"],
	"linter": {
		"rules": {
			"style": {
				"noNonNullAssertion": "off"
			},
			"complexity": {
				"useLiteralKeys": "off"
			},
			"suspicious": {
				"noControlCharactersInRegex": "off",
				"noThenProperty": "off"
			},
			"correctness": {
				"noUnusedVariables": "warn"
			}
		}
	},
	"files": {
		"includes": [
			"**/*.ts",
			"**/*.tsx",
			"**/*.js",
			"**/*.jsx",
			"**/*.json",
			"**/*.jsonc",
			"**/*.mdx"
		]
	}
}
